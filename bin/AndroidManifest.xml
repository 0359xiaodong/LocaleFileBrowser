<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tracyzhang.localefilebrowser"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:name="com.tracyzhang.localefilebrowser.LFBApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tracyzhang.localefilebrowser.LocaleFileMain"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.tracyzhang.localefilebrowser.LocaleMediaFileBrowser"
             />
        <activity
            android:name="com.tracyzhang.localefilebrowser.LocaleFileGallery"
             />
        <activity
            android:name="com.tracyzhang.localefilebrowser.LocaleFileBrowser"
             />
        <activity
            android:name="com.tracyzhang.localefilebrowser.BXFileViewer"
             />
        
    </application>

</manifest>
